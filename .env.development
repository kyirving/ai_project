# 工作模式: file (处理文件), realtime (实时会议)
MODE=file

# LLM 提供商: openai, tongyi, glm, ollama
LLM_PROVIDER=tongyi

# 语音识别器: faster-whisper (默认) 或 funasr (中文更优)
ASR_PROVIDER=faster-whisper

# Ollama 配置 (本地运行，无需 Key)
# 8G 内存建议使用 1.5b 模型: ollama run qwen2:1.5b
# 下载地址: https://ollama.com
OLLAMA_BASE_URL=http://localhost:11434

# OpenAI 配置 (如果 LLM_PROVIDER=openai)
OPENAI_API_KEY=
OPENAI_BASE_URL=

VECTOR_STORE=faiss

# 通义千问 (DashScope)
# 在这里填入你的 Key: https://dashscope.console.aliyun.com/apiKey
DASHSCOPE_API_KEY=sk-b7c1ff7027484902b0c764b2c80dbe2d

# 智谱 AI (如果 LLM_PROVIDER=glm)
ZHIPUAI_API_KEY=

# Whisper 配置
# 本地模型大小: tiny, base, small, medium, large-v3
WHISPER_MODEL_SIZE=tiny



# --- 邮件通知配置 (企业微信邮箱) ---
# 是否开启邮件通知: true / false
ENABLE_EMAIL_NOTIFICATION=false

# 发件人设置
# 企业微信邮箱 SMTP 服务器: smtp.exmail.qq.com
SMTP_SERVER=smtp.exmail.qq.com
SMTP_PORT=465
EMAIL_SENDER=your_name@company.com
# 邮箱密码或客户端授权码
EMAIL_PASSWORD=your_password

# 收件人列表 (多个邮箱用英文逗号分隔)
EMAIL_RECIPIENTS=boss@company.com,team@company.com
